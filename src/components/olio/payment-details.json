      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "failed"
      ]
    },
    "slipImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  },
  "config": {}
}
