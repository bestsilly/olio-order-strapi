    "displayName": "Payment-Details",
    "icon": "shoppingCart"
  },
  "options": {},
  "attributes": {
    "method": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "promptpay",
        "cash_on_pickup"
      ]
    },
    "paymentStatus": {
